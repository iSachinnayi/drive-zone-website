---
import siteData from '../../data/site.json';

const reviews = siteData.reviews;
const featuredReviews = reviews.items.slice(0, 4);

// Star rating helper
const getStars = (rating: number) => {
  return Array.from({ length: 5 }, (_, i) => i < rating);
};
---

<section class="py-16 md:py-24 bg-gradient-to-b from-white to-gray-50 overflow-hidden">
  <div class="container-custom">
    <!-- Header -->
    <div class="text-center mb-12">
      <span class="inline-block px-4 py-1.5 bg-brand-amber/10 text-brand-amber text-sm font-semibold rounded-full mb-4">
        Customer Reviews
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-brand-dark mb-4">
        What Our Customers Say
      </h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Don't just take our word for it. Here's what our valued customers in Abu Dhabi have to say about Drive Zone.
      </p>
      
      <!-- Overall Rating -->
      <div class="flex items-center justify-center gap-4 mt-6">
        <div class="flex items-center gap-1">
          {Array.from({ length: 5 }).map((_, i) => (
            <svg 
              class={`w-6 h-6 ${i < Math.floor(reviews.averageRating) ? 'text-yellow-400' : 'text-gray-300'}`} 
              fill="currentColor" 
              viewBox="0 0 20 20"
            >
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          ))}
        </div>
        <span class="text-2xl font-bold text-brand-dark">{reviews.averageRating}</span>
        <span class="text-gray-500">({reviews.totalReviews} reviews on Google)</span>
      </div>
    </div>

    <!-- Reviews Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-10">
      {featuredReviews.map((review, index) => (
        <article 
          class="group bg-white rounded-2xl p-6 shadow-sm hover:shadow-xl transition-all duration-500 border border-gray-100 hover:border-brand-amber/30 relative overflow-hidden"
          style={`animation-delay: ${index * 100}ms`}
        >
          <!-- Decorative gradient -->
          <div class="absolute top-0 left-0 w-full h-1 bg-gradient-to-r from-brand-amber to-yellow-400 transform origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-500"></div>
          
          <!-- Quote icon -->
          <div class="absolute top-4 right-4 text-brand-amber/10 group-hover:text-brand-amber/20 transition-colors">
            <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
            </svg>
          </div>
          
          <!-- Header -->
          <div class="flex items-start gap-4 mb-4">
            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-brand-amber to-yellow-500 flex items-center justify-center text-white font-bold text-lg shrink-0 shadow-md">
              {review.name.charAt(0)}
            </div>
            <div class="flex-1 min-w-0">
              <h3 class="font-semibold text-brand-dark truncate">{review.name}</h3>
              <div class="flex items-center gap-2 mt-1">
                <div class="flex">
                  {getStars(review.rating).map((filled) => (
                    <svg 
                      class={`w-4 h-4 ${filled ? 'text-yellow-400' : 'text-gray-300'}`}
                      fill="currentColor" 
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  ))}
                </div>
                <span class="text-xs text-gray-400">
                  {new Date(review.date).toLocaleDateString('en-US', { month: 'short', year: 'numeric' })}
                </span>
              </div>
            </div>
            <!-- Google Icon -->
            <svg class="w-6 h-6 text-gray-400" viewBox="0 0 24 24" fill="currentColor">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
            </svg>
          </div>
          
          <!-- Review Text -->
          <p class="text-gray-600 text-sm leading-relaxed line-clamp-3 mb-4">
            "{review.text}"
          </p>
          
          <!-- Response if exists -->
          {review.response && (
            <div class="bg-gray-50 rounded-lg p-3 border-l-3 border-brand-amber">
              <p class="text-xs text-gray-500 font-medium mb-1">Response from Drive Zone</p>
              <p class="text-sm text-gray-600">{review.response}</p>
            </div>
          )}
        </article>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center">
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a 
          href="/reviews"
          class="inline-flex items-center gap-2 px-6 py-3 bg-brand-dark text-white font-semibold rounded-full hover:bg-brand-charcoal transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-0.5"
        >
          <span>See All Reviews</span>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
        <a 
          href={reviews.googleReviewsUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 px-6 py-3 border-2 border-brand-amber text-brand-dark font-semibold rounded-full hover:bg-brand-amber hover:text-white transition-all duration-300"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
          </svg>
          <span>Write a Review</span>
        </a>
      </div>
    </div>
  </div>
</section>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .border-l-3 {
    border-left-width: 3px;
  }
  
  article {
    animation: fadeInUp 0.6s ease-out forwards;
    opacity: 0;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

