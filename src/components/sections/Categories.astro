  'cpu': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 3v2m6-2v2M9 19v2m6-2v2M3 9h2m-2 6h2m14-6h2m-2 6h2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>`,
  'seat': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>`,
  'sparkles': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>`,
  'lightbulb': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>`,
  'cog': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>`
};

const categoryLinks: Record<string, string> = {
  'Window Tinting': '/services/car-services',
  'Car Electronics': '/services/car-electronics',
  'Seat Covers': '/services/car-accessories',
  'Ceramic Coating': '/services/car-services',
  'LED Lighting': '/services/car-accessories',
  'Car Parts': '/services/auto-parts'
};
---

<section class="section bg-white">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-brand-dark mb-4">
        What We <span class="text-brand-amber">Offer</span>
      </h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        From window tinting to car electronics, we provide a wide range of automotive products and services.
      </p>
    </div>
    
    <!-- Categories Grid -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 md:gap-6">
      {siteData.categories.map((category, index) => (
        <a 
          href={categoryLinks[category.name] || '/services'}
          class="group p-6 bg-brand-light-gray rounded-xl text-center hover:bg-brand-dark hover:shadow-xl transition-all duration-300"
          style={`animation-delay: ${index * 50}ms`}
        >
          <div class="w-16 h-16 mx-auto mb-4 bg-white rounded-xl flex items-center justify-center group-hover:bg-brand-amber transition-colors shadow-sm">
            <svg class="w-8 h-8 text-brand-amber group-hover:text-brand-dark transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[category.icon]} />
          </div>
          <h3 class="font-semibold text-brand-dark group-hover:text-white transition-colors text-sm md:text-base">
            {category.name}
          </h3>
          <p class="text-xs text-gray-500 group-hover:text-gray-300 mt-1 hidden md:block transition-colors">
            {category.description}
          </p>
        </a>
      ))}
    </div>
    
    <!-- CTA -->
    <div class="text-center mt-10">
      <a href="/services" class="btn btn-secondary">
        Explore All Services
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
        </svg>
      </a>
    </div>
  </div>
</section>
