---
import siteData from '../../data/site.json';
---

<section class="section bg-white">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-brand-dark mb-4">
        Our <span class="text-brand-amber">Store</span>
      </h2>
      <p class="text-gray-600 max-w-2xl mx-auto">
        Visit our well-stocked store in Mussaffah, Abu Dhabi
      </p>
    </div>
    
    <!-- Gallery Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {siteData.gallery.map((image, index) => (
        <div 
          class="relative group overflow-hidden rounded-xl shadow-lg aspect-[4/3]"
          style={`animation-delay: ${index * 100}ms`}
        >
          <img 
            src={image.src}
            alt={image.alt}
            loading="lazy"
            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
          />
          <div class="absolute inset-0 bg-gradient-to-t from-brand-dark/80 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="absolute bottom-0 left-0 right-0 p-4">
              <p class="text-white font-medium">{image.caption}</p>
            </div>
          </div>
        </div>
      ))}
      
      <!-- Placeholder cards if not enough images -->
      <div class="relative overflow-hidden rounded-xl shadow-lg aspect-[4/3] bg-brand-light-gray flex items-center justify-center">
        <div class="text-center p-6">
          <svg class="w-16 h-16 text-brand-amber mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
          <h3 class="font-bold text-brand-dark">Wide Selection</h3>
          <p class="text-sm text-gray-600 mt-1">Quality parts in stock</p>
        </div>
      </div>
      
      <div class="relative overflow-hidden rounded-xl shadow-lg aspect-[4/3] bg-brand-light-gray flex items-center justify-center">
        <div class="text-center p-6">
          <svg class="w-16 h-16 text-brand-amber mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
          </svg>
          <h3 class="font-bold text-brand-dark">Expert Team</h3>
          <p class="text-sm text-gray-600 mt-1">Here to help you</p>
        </div>
      </div>
    </div>
    
    <!-- Visit CTA -->
    <div class="mt-10 p-6 md:p-8 bg-brand-light-gray rounded-2xl">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <div>
          <h3 class="text-2xl font-bold text-brand-dark mb-2">Visit Us Today</h3>
          <p class="text-gray-600">{siteData.business.address.full}</p>
        </div>
        <a 
          href={siteData.business.googleMapsUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-secondary whitespace-nowrap"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          Get Directions
        </a>
      </div>
    </div>
  </div>
</section>

