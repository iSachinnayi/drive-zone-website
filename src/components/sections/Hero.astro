---
import siteData from '../../data/site.json';
---

<section class="relative bg-brand-dark overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,%3Csvg width=\"60\" height=\"60\" viewBox=\"0 0 60 60\" xmlns=\"http://www.w3.org/2000/svg\"%3E%3Cg fill=\"none\" fill-rule=\"evenodd\"%3E%3Cg fill=\"%23D4A017\" fill-opacity=\"0.4\"%3E%3Cpath d=\"M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z\"/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
  </div>
  
  <!-- Gradient Overlay -->
  <div class="absolute inset-0 bg-gradient-to-br from-brand-dark via-brand-dark to-brand-charcoal"></div>
  
  <!-- Animated Lines -->
  <div class="absolute top-20 left-0 w-96 h-1 bg-gradient-to-r from-brand-amber to-transparent opacity-30 animate-slide-in-left"></div>
  <div class="absolute top-32 left-0 w-64 h-0.5 bg-gradient-to-r from-brand-amber to-transparent opacity-20 animate-slide-in-left animate-delay-200"></div>
  <div class="absolute bottom-32 right-0 w-80 h-1 bg-gradient-to-l from-brand-amber to-transparent opacity-30"></div>
  
  <div class="relative container-custom py-20 md:py-32 lg:py-40">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-brand-charcoal rounded-full mb-8 animate-fade-in">
        <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
        <span class="text-sm text-gray-300">Open Today â€¢ Mussaffah, Abu Dhabi</span>
      </div>
      
      <!-- Headline -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-white mb-6 leading-tight animate-slide-up">
        {siteData.hero.headline.split(' ').slice(0, 3).join(' ')}
        <span class="text-brand-amber"> {siteData.hero.headline.split(' ').slice(3).join(' ')}</span>
      </h1>
      
      <!-- Subheadline -->
      <p class="text-lg md:text-xl text-gray-300 mb-10 max-w-2xl mx-auto animate-slide-up animate-delay-100">
        {siteData.hero.subheadline}
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-slide-up animate-delay-200">
        <a 
          href={`tel:${siteData.business.phone}`}
          class="btn btn-primary text-lg px-8 py-4 w-full sm:w-auto"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          {siteData.hero.ctaPrimary.text}
        </a>
        <a 
          href={siteData.business.googleMapsUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-outline-light text-lg px-8 py-4 w-full sm:w-auto"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          {siteData.hero.ctaSecondary.text}
        </a>
      </div>
      
      <!-- Trust indicators -->
      <div class="mt-12 pt-8 border-t border-brand-charcoal animate-fade-in animate-delay-300">
        <div class="flex flex-wrap items-center justify-center gap-8 text-gray-400 text-sm">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-brand-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Quality Parts
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-brand-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
            </svg>
            Cards Accepted
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 text-brand-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            Delivery Available
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom Wave -->
  <div class="absolute bottom-0 left-0 right-0">
    <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-auto">
      <path d="M0 120L60 105C120 90 240 60 360 45C480 30 600 30 720 37.5C840 45 960 60 1080 67.5C1200 75 1320 75 1380 75L1440 75V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0Z" fill="white"/>
    </svg>
  </div>
</section>

