---
import siteData from '../data/site.json';

const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/services/auto-parts', label: 'Auto Parts' },
  { href: '/services/car-accessories', label: 'Car Accessories' },
  { href: '/reviews', label: 'Reviews' },
  { href: '/about', label: 'About Us' },
  { href: '/contact', label: 'Contact' },
];

const legalLinks = [
  { href: '/privacy', label: 'Privacy Policy' },
  { href: '/terms', label: 'Terms of Service' },
];
---

<footer class="bg-brand-dark text-white">
  <!-- Main Footer -->
  <div class="container-custom py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="inline-block mb-6">
          <img 
            src="/logo/logo-horizontal-light.svg" 
            alt="Drive Zone Auto Parts - درايف زون" 
            class="h-16 w-auto"
            loading="lazy"
          />
        </a>
        <p class="text-gray-400 text-sm leading-relaxed mb-6">
          {siteData.business.tagline}
        </p>
        <div class="flex items-center gap-4">
          <!-- Payment Icons -->
          <div class="flex items-center gap-2 text-gray-500">
            <span class="text-xs uppercase tracking-wide">We Accept:</span>
          </div>
        </div>
        <div class="flex flex-wrap gap-2 mt-3">
          <span class="px-2 py-1 bg-brand-charcoal rounded text-xs text-gray-300">Visa</span>
          <span class="px-2 py-1 bg-brand-charcoal rounded text-xs text-gray-300">Mastercard</span>
          <span class="px-2 py-1 bg-brand-charcoal rounded text-xs text-gray-300">AmEx</span>
          <span class="px-2 py-1 bg-brand-charcoal rounded text-xs text-gray-300">Cash</span>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-brand-amber">Quick Links</h3>
        <ul class="space-y-3">
          {quickLinks.map(link => (
            <li>
              <a 
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Business Hours -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-brand-amber">Business Hours</h3>
        <ul class="space-y-3">
          {siteData.hours.display.map(item => (
            <li class="text-sm">
              <span class="text-gray-400">{item.days}</span>
              <br />
              <span class="text-white font-medium">{item.time}</span>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-semibold mb-4 text-brand-amber">Contact Us</h3>
        <ul class="space-y-4">
          <li>
            <a 
              href={`tel:${siteData.business.phone}`}
              class="flex items-start gap-3 text-gray-400 hover:text-white transition-colors group"
            >
              <svg class="w-5 h-5 mt-0.5 text-brand-amber group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <span class="text-sm">{siteData.business.phoneDisplay}</span>
            </a>
          </li>
          <li>
            <a 
              href={`https://wa.me/${siteData.business.whatsapp}`}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-start gap-3 text-gray-400 hover:text-green-400 transition-colors group"
            >
              <svg class="w-5 h-5 mt-0.5 text-green-500 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
              </svg>
              <span class="text-sm">WhatsApp Us</span>
            </a>
          </li>
          <li>
            <a 
              href={siteData.business.googleMapsUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-start gap-3 text-gray-400 hover:text-white transition-colors group"
            >
              <svg class="w-5 h-5 mt-0.5 text-brand-amber group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
              <span class="text-sm">{siteData.business.address.full}</span>
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-brand-charcoal">
    <div class="container-custom py-6">
      <div class="flex flex-col md:flex-row items-center justify-between gap-4">
        <p class="text-gray-500 text-sm text-center md:text-left">
          © {currentYear} {siteData.business.name}. All rights reserved.
        </p>
        <div class="flex items-center gap-6">
          {legalLinks.map(link => (
            <a 
              href={link.href}
              class="text-gray-500 hover:text-white transition-colors text-sm"
            >
              {link.label}
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>

<!-- Floating WhatsApp Button -->
<a 
  href={`https://wa.me/${siteData.business.whatsapp}?text=Hi, I'm interested in your auto parts and services.`}
  target="_blank"
  rel="noopener noreferrer"
  class="fixed bottom-6 right-6 z-50 bg-green-500 hover:bg-green-600 text-white p-4 rounded-full shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-110 group"
  aria-label="Chat on WhatsApp"
>
  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
  </svg>
  <span class="absolute right-full mr-3 top-1/2 -translate-y-1/2 bg-gray-900 text-white text-sm px-3 py-1.5 rounded-lg whitespace-nowrap opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none">
    Chat with us!
  </span>
</a>

