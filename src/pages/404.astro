---
import BaseLayout from '../layouts/BaseLayout.astro';
import siteData from '../data/site.json';
---

<BaseLayout title="Page Not Found" description="The page you're looking for doesn't exist." noIndex={true}>
  <section class="min-h-[70vh] flex items-center justify-center bg-brand-light-gray">
    <div class="container-custom text-center py-20">
      <!-- 404 Illustration -->
      <div class="mb-8">
        <div class="inline-flex items-center justify-center w-32 h-32 bg-brand-amber/20 rounded-full mb-6">
          <svg class="w-16 h-16 text-brand-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
        <h1 class="text-8xl font-bold text-brand-dark mb-4">404</h1>
      </div>
      
      <h2 class="text-2xl md:text-3xl font-bold text-brand-dark mb-4">
        Oops! Page Not Found
      </h2>
      
      <p class="text-gray-600 mb-8 max-w-md mx-auto">
        The page you're looking for doesn't exist or has been moved. Let's get you back on track.
      </p>
      
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="/" class="btn btn-primary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          Back to Home
        </a>
        <a href="/contact" class="btn btn-secondary">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
          </svg>
          Contact Us
        </a>
      </div>
      
      <!-- Quick Links -->
      <div class="mt-12 pt-8 border-t border-gray-200">
        <p class="text-gray-500 mb-4">Looking for something specific?</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a href="/services/auto-parts" class="text-brand-amber hover:text-brand-amber-dark transition-colors">
            Auto Parts
          </a>
          <span class="text-gray-300">•</span>
          <a href="/services/car-accessories" class="text-brand-amber hover:text-brand-amber-dark transition-colors">
            Car Accessories
          </a>
          <span class="text-gray-300">•</span>
          <a href="/services/delivery" class="text-brand-amber hover:text-brand-amber-dark transition-colors">
            Delivery Service
          </a>
          <span class="text-gray-300">•</span>
          <a href="/about" class="text-brand-amber hover:text-brand-amber-dark transition-colors">
            About Us
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

