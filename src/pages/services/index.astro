---
import BaseLayout from '../../layouts/BaseLayout.astro';
import siteData from '../../data/site.json';

const { title, description } = siteData.seo.pages.services;

const categoryColors: Record<string, string> = {
  'amber': 'bg-amber-500',
  'blue': 'bg-blue-500',
  'purple': 'bg-purple-500',
  'red': 'bg-red-500',
  'green': 'bg-green-500',
  'gray': 'bg-gray-500'
};

const categoryBgColors: Record<string, string> = {
  'amber': 'bg-amber-50 hover:bg-amber-100 border-amber-200',
  'blue': 'bg-blue-50 hover:bg-blue-100 border-blue-200',
  'purple': 'bg-purple-50 hover:bg-purple-100 border-purple-200',
  'red': 'bg-red-50 hover:bg-red-100 border-red-200',
  'green': 'bg-green-50 hover:bg-green-100 border-green-200',
  'gray': 'bg-gray-50 hover:bg-gray-100 border-gray-200'
};

const categoryTextColors: Record<string, string> = {
  'amber': 'text-amber-700',
  'blue': 'text-blue-700',
  'purple': 'text-purple-700',
  'red': 'text-red-700',
  'green': 'text-green-700',
  'gray': 'text-gray-700'
};

const icons: Record<string, string> = {
  'sparkles': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>`,
  'cpu': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 3v2m6-2v2M9 19v2m6-2v2M3 9h2m-2 6h2m14-6h2m-2 6h2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"/>`,
  'seat': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>`,
  'car': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 17h8M8 17a2 2 0 11-4 0m4 0a2 2 0 10-4 0m12 0a2 2 0 11-4 0m4 0a2 2 0 10-4 0m-8-5l2-5h8l2 5M4 12h16"/>`,
  'wrench': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>`,
  'cog': `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>`
};
---

<BaseLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-brand-dark py-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-brand-dark via-brand-charcoal to-brand-dark"></div>
    
    <!-- Decorative elements -->
    <div class="absolute top-10 left-0 w-96 h-1 bg-gradient-to-r from-brand-amber to-transparent opacity-30"></div>
    <div class="absolute top-20 left-0 w-64 h-0.5 bg-gradient-to-r from-brand-amber to-transparent opacity-20"></div>
    <div class="absolute bottom-20 right-0 w-80 h-1 bg-gradient-to-l from-brand-amber to-transparent opacity-30"></div>
    
    <div class="container-custom relative">
      <div class="max-w-3xl">
        <nav class="flex items-center gap-2 text-sm text-gray-400 mb-6">
          <a href="/" class="hover:text-white transition-colors">Home</a>
          <span>/</span>
          <span class="text-brand-amber">Our Services</span>
        </nav>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          Our <span class="text-brand-amber">Services</span>
        </h1>
        
        <p class="text-xl text-gray-300 mb-8 max-w-2xl">
          From window tinting to car electronics, ceramic coating to quality spare parts — we offer comprehensive automotive solutions for your vehicle.
        </p>
        
        <div class="flex flex-wrap gap-3">
          <span class="px-4 py-2 bg-brand-charcoal rounded-full text-sm text-gray-300">
            ✓ Professional Installation
          </span>
          <span class="px-4 py-2 bg-brand-charcoal rounded-full text-sm text-gray-300">
            ✓ Quality Products
          </span>
          <span class="px-4 py-2 bg-brand-charcoal rounded-full text-sm text-gray-300">
            ✓ Expert Advice
          </span>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Service Categories Section -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-brand-dark mb-4">
          What We <span class="text-brand-amber">Offer</span>
        </h2>
        <p class="text-gray-600 max-w-2xl mx-auto">
          Explore our complete range of automotive services and products
        </p>
      </div>
      
      <div class="space-y-12">
        {siteData.serviceCategories.map((category, catIndex) => (
          <div 
            id={category.id}
            class={`rounded-2xl border-2 p-6 md:p-8 transition-all ${categoryBgColors[category.color]}`}
          >
            <div class="flex flex-col md:flex-row md:items-start gap-6 mb-8">
              <div class={`flex-shrink-0 w-16 h-16 ${categoryColors[category.color]} rounded-xl flex items-center justify-center`}>
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" set:html={icons[category.icon]} />
              </div>
              <div>
                <h3 class={`text-2xl md:text-3xl font-bold ${categoryTextColors[category.color]} mb-2`}>
                  {category.title}
                </h3>
                <p class="text-gray-600">{category.shortDesc}</p>
              </div>
            </div>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
              {category.services.map((service, serviceIndex) => (
                <div class="bg-white rounded-xl p-5 shadow-sm hover:shadow-md transition-shadow">
                  <h4 class="font-bold text-brand-dark mb-2">{service.name}</h4>
                  <p class="text-sm text-gray-600">{service.description}</p>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Quick Links to Service Pages -->
  <section class="section section-light">
    <div class="container-custom">
      <h2 class="text-3xl font-bold text-brand-dark mb-8 text-center">
        Browse by <span class="text-brand-amber">Category</span>
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {siteData.services.slice(0, -1).map(service => (
          <a 
            href={`/services/${service.id}`}
            class="card group hover:-translate-y-1"
          >
            <h3 class="text-xl font-bold text-brand-dark mb-3 group-hover:text-brand-amber transition-colors">
              {service.title}
            </h3>
            <p class="text-gray-600 mb-4 text-sm">{service.shortDesc}</p>
            <ul class="space-y-2 mb-4">
              {service.features.slice(0, 3).map(feature => (
                <li class="flex items-center gap-2 text-sm text-gray-500">
                  <svg class="w-4 h-4 text-brand-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            <span class="inline-flex items-center gap-2 text-brand-amber font-semibold text-sm group-hover:gap-3 transition-all">
              Learn More
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
              </svg>
            </span>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Delivery Banner -->
  <section class="py-12 bg-brand-dark">
    <div class="container-custom">
      <div class="flex flex-col md:flex-row items-center justify-between gap-6">
        <div class="flex items-center gap-4">
          <div class="w-14 h-14 bg-brand-amber rounded-xl flex items-center justify-center">
            <svg class="w-7 h-7 text-brand-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0"/>
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-bold text-white">Delivery Available</h3>
            <p class="text-gray-400">Can't visit? We deliver parts across Abu Dhabi</p>
          </div>
        </div>
        <a href="/services/delivery" class="btn btn-primary">
          Learn About Delivery
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </a>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="bg-brand-light-gray rounded-2xl p-8 md:p-12 text-center">
        <h2 class="text-3xl font-bold text-brand-dark mb-4">
          Ready to Get Started?
        </h2>
        <p class="text-gray-600 mb-8 max-w-xl mx-auto">
          Contact us today to discuss your requirements or visit our store in Mussaffah, Abu Dhabi.
        </p>
        <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
          <a href={`tel:${siteData.business.phone}`} class="btn btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Call Now
          </a>
          <a 
            href={`https://wa.me/${siteData.business.whatsapp}`}
            target="_blank"
            rel="noopener noreferrer"
            class="btn bg-green-600 text-white hover:bg-green-700"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            WhatsApp Us
          </a>
          <a href="/contact" class="btn btn-secondary">
            Get Directions
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
