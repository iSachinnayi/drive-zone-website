---
import BaseLayout from '../../layouts/BaseLayout.astro';
import siteData from '../../data/site.json';

const service = siteData.services.find(s => s.id === 'car-accessories');
const { title, description } = siteData.seo.pages['car-accessories'];
---

<BaseLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-brand-dark py-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-brand-dark via-brand-charcoal to-brand-dark"></div>
    <div class="absolute top-10 left-0 w-64 h-1 bg-gradient-to-r from-brand-amber to-transparent opacity-30"></div>
    <div class="absolute bottom-10 right-0 w-48 h-1 bg-gradient-to-l from-brand-amber to-transparent opacity-30"></div>
    
    <div class="container-custom relative">
      <div class="max-w-3xl">
        <nav class="flex items-center gap-2 text-sm text-gray-400 mb-6">
          <a href="/" class="hover:text-white transition-colors">Home</a>
          <span>/</span>
          <a href="/services/car-accessories" class="hover:text-white transition-colors">Services</a>
          <span>/</span>
          <span class="text-brand-amber">Car Accessories</span>
        </nav>
        
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Premium <span class="text-brand-amber">Car Accessories</span>
        </h1>
        
        <p class="text-xl text-gray-300 mb-8">
          {service?.description}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href={`tel:${siteData.business.phone}`} class="btn btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Call Us
          </a>
          <a href={`https://wa.me/${siteData.business.whatsapp}`} target="_blank" rel="noopener noreferrer" class="btn btn-outline-light">
            WhatsApp Inquiry
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Features Section -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div>
          <h2 class="text-3xl font-bold text-brand-dark mb-6">
            Accessories We <span class="text-brand-amber">Offer</span>
          </h2>
          
          <ul class="space-y-4">
            {service?.features.map(feature => (
              <li class="flex items-start gap-3">
                <div class="flex-shrink-0 w-6 h-6 bg-brand-amber rounded-full flex items-center justify-center mt-0.5">
                  <svg class="w-4 h-4 text-brand-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <span class="text-gray-700">{feature}</span>
              </li>
            ))}
          </ul>
          
          <div class="mt-8 p-6 bg-brand-light-gray rounded-xl">
            <h3 class="font-bold text-brand-dark mb-2">Looking for something specific?</h3>
            <p class="text-gray-600 text-sm mb-4">
              We have a wide range of accessories. Contact us and tell us what you need!
            </p>
            <a href={`tel:${siteData.business.phone}`} class="text-brand-amber font-semibold hover:text-brand-amber-dark transition-colors">
              {siteData.business.phoneDisplay}
            </a>
          </div>
        </div>
        
        <div class="space-y-6">
          <div class="card">
            <div class="w-12 h-12 bg-brand-amber/20 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-brand-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
              </svg>
            </div>
            <h3 class="font-bold text-brand-dark text-lg mb-2">Style & Comfort</h3>
            <p class="text-gray-600">Upgrade your vehicle's interior and exterior with quality accessories.</p>
          </div>
          
          <div class="card">
            <div class="w-12 h-12 bg-brand-amber/20 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-brand-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
            </div>
            <h3 class="font-bold text-brand-dark text-lg mb-2">LED Lighting</h3>
            <p class="text-gray-600">Interior and exterior lighting upgrades for visibility and style.</p>
          </div>
          
          <div class="card">
            <div class="w-12 h-12 bg-brand-amber/20 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-brand-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
              </svg>
            </div>
            <h3 class="font-bold text-brand-dark text-lg mb-2">Tech & Electronics</h3>
            <p class="text-gray-600">Phone mounts, chargers, and car electronic accessories.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="section section-dark">
    <div class="container-custom text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        Upgrade Your Ride Today
      </h2>
      <p class="text-gray-400 mb-8 max-w-xl mx-auto">
        Visit Drive Zone for the best selection of car accessories in Abu Dhabi.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href={`tel:${siteData.business.phone}`} class="btn btn-primary">
          Call Now: {siteData.business.phoneDisplay}
        </a>
        <a href="/contact" class="btn btn-outline-light">
          Visit Our Store
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

