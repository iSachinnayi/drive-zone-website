---
import BaseLayout from '../../layouts/BaseLayout.astro';
import siteData from '../../data/site.json';

const service = siteData.services.find(s => s.id === 'car-services');
const category = siteData.serviceCategories.find(c => c.id === 'car-enhancement');
const { title, description } = siteData.seo.pages['car-services'];
---

<BaseLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-brand-dark py-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-brand-dark via-brand-charcoal to-brand-dark"></div>
    <div class="absolute top-10 left-0 w-64 h-1 bg-gradient-to-r from-brand-amber to-transparent opacity-30"></div>
    <div class="absolute bottom-10 right-0 w-48 h-1 bg-gradient-to-l from-brand-amber to-transparent opacity-30"></div>
    
    <div class="container-custom relative">
      <div class="max-w-3xl">
        <nav class="flex items-center gap-2 text-sm text-gray-400 mb-6">
          <a href="/" class="hover:text-white transition-colors">Home</a>
          <span>/</span>
          <a href="/services" class="hover:text-white transition-colors">Services</a>
          <span>/</span>
          <span class="text-brand-amber">Car Enhancement Services</span>
        </nav>
        
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Car Enhancement <span class="text-brand-amber">Services</span>
        </h1>
        
        <p class="text-xl text-gray-300 mb-8">
          {service?.description}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href={`tel:${siteData.business.phone}`} class="btn btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Book a Service
          </a>
          <a href={`https://wa.me/${siteData.business.whatsapp}`} target="_blank" rel="noopener noreferrer" class="btn btn-outline-light">
            WhatsApp Inquiry
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Services Grid -->
  <section class="section bg-white">
    <div class="container-custom">
      <h2 class="text-3xl font-bold text-brand-dark mb-8">
        Our Enhancement <span class="text-brand-amber">Services</span>
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {category?.services.map(item => (
          <div class="bg-gradient-to-br from-amber-50 to-orange-50 rounded-xl p-8 border border-amber-100 hover:shadow-xl transition-shadow">
            <div class="w-14 h-14 bg-brand-amber rounded-xl flex items-center justify-center mb-6">
              <svg class="w-7 h-7 text-brand-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-brand-dark mb-3">{item.name}</h3>
            <p class="text-gray-600">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Benefits Section -->
  <section class="section section-dark">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-white mb-4">
          Benefits of Our <span class="text-brand-amber">Services</span>
        </h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-brand-amber/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-brand-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"/>
            </svg>
          </div>
          <h3 class="font-bold text-white mb-2">UV Protection</h3>
          <p class="text-gray-400 text-sm">Window tinting blocks harmful UV rays</p>
        </div>
        
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-brand-amber/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-brand-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h3 class="font-bold text-white mb-2">Paint Protection</h3>
          <p class="text-gray-400 text-sm">Ceramic coating & PPF shield your paint</p>
        </div>
        
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-brand-amber/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-brand-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"/>
            </svg>
          </div>
          <h3 class="font-bold text-white mb-2">Enhanced Shine</h3>
          <p class="text-gray-400 text-sm">Professional polishing restores showroom finish</p>
        </div>
        
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-brand-amber/20 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-brand-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="font-bold text-white mb-2">Increased Value</h3>
          <p class="text-gray-400 text-sm">Well-maintained cars retain higher resale value</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Features List -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold text-brand-dark mb-6">
            What's <span class="text-brand-amber">Included</span>
          </h2>
          
          <ul class="space-y-4">
            {service?.features.map(feature => (
              <li class="flex items-start gap-3">
                <div class="flex-shrink-0 w-6 h-6 bg-brand-amber rounded-full flex items-center justify-center mt-0.5">
                  <svg class="w-4 h-4 text-brand-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <span class="text-gray-700">{feature}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="bg-brand-light-gray rounded-2xl p-8">
          <h3 class="text-xl font-bold text-brand-dark mb-4">Book Your Service</h3>
          <p class="text-gray-600 mb-6">
            Contact us to schedule an appointment for window tinting, ceramic coating, or any of our enhancement services.
          </p>
          <div class="space-y-4">
            <a 
              href={`tel:${siteData.business.phone}`}
              class="flex items-center gap-3 p-4 bg-white rounded-xl hover:shadow-md transition-shadow"
            >
              <div class="w-10 h-10 bg-brand-amber rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-brand-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <p class="font-bold text-brand-dark">Call Us</p>
                <p class="text-sm text-gray-600">{siteData.business.phoneDisplay}</p>
              </div>
            </a>
            
            <a 
              href={`https://wa.me/${siteData.business.whatsapp}`}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-3 p-4 bg-green-50 rounded-xl hover:shadow-md transition-shadow"
            >
              <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <div>
                <p class="font-bold text-green-700">WhatsApp</p>
                <p class="text-sm text-green-600">Quick inquiries</p>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

