---
import BaseLayout from '../../layouts/BaseLayout.astro';
import siteData from '../../data/site.json';

const service = siteData.services.find(s => s.id === 'delivery');
const { title, description } = siteData.seo.pages['delivery'];
---

<BaseLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-brand-dark py-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-brand-dark via-brand-charcoal to-brand-dark"></div>
    <div class="absolute top-10 left-0 w-64 h-1 bg-gradient-to-r from-brand-amber to-transparent opacity-30"></div>
    <div class="absolute bottom-10 right-0 w-48 h-1 bg-gradient-to-l from-brand-amber to-transparent opacity-30"></div>
    
    <div class="container-custom relative">
      <div class="max-w-3xl">
        <nav class="flex items-center gap-2 text-sm text-gray-400 mb-6">
          <a href="/" class="hover:text-white transition-colors">Home</a>
          <span>/</span>
          <a href="/services/delivery" class="hover:text-white transition-colors">Services</a>
          <span>/</span>
          <span class="text-brand-amber">Delivery</span>
        </nav>
        
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Parts <span class="text-brand-amber">Delivery Service</span>
        </h1>
        
        <p class="text-xl text-gray-300 mb-8">
          {service?.description}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href={`tel:${siteData.business.phone}`} class="btn btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Call to Order
          </a>
          <a href={`https://wa.me/${siteData.business.whatsapp}?text=Hi, I'd like to order parts for delivery.`} target="_blank" rel="noopener noreferrer" class="btn btn-outline-light">
            Order via WhatsApp
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- How It Works Section -->
  <section class="section bg-white">
    <div class="container-custom">
      <h2 class="text-3xl font-bold text-brand-dark mb-12 text-center">
        How Delivery <span class="text-brand-amber">Works</span>
      </h2>
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-amber rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold text-brand-dark">
            1
          </div>
          <h3 class="font-bold text-brand-dark mb-2">Contact Us</h3>
          <p class="text-gray-600 text-sm">Call or WhatsApp us with your parts requirements and vehicle details.</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-amber rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold text-brand-dark">
            2
          </div>
          <h3 class="font-bold text-brand-dark mb-2">Confirm Order</h3>
          <p class="text-gray-600 text-sm">We'll check availability and confirm the parts and pricing with you.</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-amber rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold text-brand-dark">
            3
          </div>
          <h3 class="font-bold text-brand-dark mb-2">Delivery</h3>
          <p class="text-gray-600 text-sm">We package and deliver your parts to your specified location in Abu Dhabi.</p>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-brand-amber rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold text-brand-dark">
            4
          </div>
          <h3 class="font-bold text-brand-dark mb-2">Payment</h3>
          <p class="text-gray-600 text-sm">Pay on delivery with cash or card. Simple and convenient.</p>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Features Section -->
  <section class="section section-light">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div>
          <h2 class="text-3xl font-bold text-brand-dark mb-6">
            Delivery <span class="text-brand-amber">Benefits</span>
          </h2>
          
          <ul class="space-y-4">
            {service?.features.map(feature => (
              <li class="flex items-start gap-3">
                <div class="flex-shrink-0 w-6 h-6 bg-brand-amber rounded-full flex items-center justify-center mt-0.5">
                  <svg class="w-4 h-4 text-brand-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <span class="text-gray-700">{feature}</span>
              </li>
            ))}
          </ul>
        </div>
        
        <div class="bg-white rounded-2xl p-8 shadow-lg">
          <h3 class="text-xl font-bold text-brand-dark mb-6">Ready to Order?</h3>
          
          <div class="space-y-4">
            <a 
              href={`tel:${siteData.business.phone}`}
              class="flex items-center gap-4 p-4 bg-brand-light-gray rounded-xl hover:bg-brand-amber/10 transition-colors group"
            >
              <div class="w-12 h-12 bg-brand-amber rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-brand-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
              </div>
              <div>
                <p class="font-bold text-brand-dark">Call Us</p>
                <p class="text-gray-600">{siteData.business.phoneDisplay}</p>
              </div>
            </a>
            
            <a 
              href={`https://wa.me/${siteData.business.whatsapp}?text=Hi, I'd like to order parts for delivery.`}
              target="_blank"
              rel="noopener noreferrer"
              class="flex items-center gap-4 p-4 bg-green-50 rounded-xl hover:bg-green-100 transition-colors group"
            >
              <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <div>
                <p class="font-bold text-green-700">WhatsApp Order</p>
                <p class="text-green-600">Quick and easy ordering</p>
              </div>
            </a>
          </div>
          
          <p class="text-gray-500 text-sm mt-6">
            Delivery charges may apply based on location. Contact us for details.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

