---
import BaseLayout from '../../layouts/BaseLayout.astro';
import siteData from '../../data/site.json';

const service = siteData.services.find(s => s.id === 'auto-parts');
const { title, description } = siteData.seo.pages['auto-parts'];
---

<BaseLayout title={title} description={description}>
  <!-- Hero Section -->
  <section class="bg-brand-dark py-20 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-brand-dark via-brand-charcoal to-brand-dark"></div>
    <div class="absolute top-10 left-0 w-64 h-1 bg-gradient-to-r from-brand-amber to-transparent opacity-30"></div>
    <div class="absolute bottom-10 right-0 w-48 h-1 bg-gradient-to-l from-brand-amber to-transparent opacity-30"></div>
    
    <div class="container-custom relative">
      <div class="max-w-3xl">
        <nav class="flex items-center gap-2 text-sm text-gray-400 mb-6">
          <a href="/" class="hover:text-white transition-colors">Home</a>
          <span>/</span>
          <a href="/services/auto-parts" class="hover:text-white transition-colors">Services</a>
          <span>/</span>
          <span class="text-brand-amber">Auto Parts</span>
        </nav>
        
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">
          Quality <span class="text-brand-amber">Auto Parts</span>
        </h1>
        
        <p class="text-xl text-gray-300 mb-8">
          {service?.description}
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4">
          <a href={`tel:${siteData.business.phone}`} class="btn btn-primary">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            Call for Parts
          </a>
          <a href={`https://wa.me/${siteData.business.whatsapp}`} target="_blank" rel="noopener noreferrer" class="btn btn-outline-light">
            WhatsApp Inquiry
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Features Section -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div>
          <h2 class="text-3xl font-bold text-brand-dark mb-6">
            What We <span class="text-brand-amber">Stock</span>
          </h2>
          
          <ul class="space-y-4">
            {service?.features.map(feature => (
              <li class="flex items-start gap-3">
                <div class="flex-shrink-0 w-6 h-6 bg-brand-amber rounded-full flex items-center justify-center mt-0.5">
                  <svg class="w-4 h-4 text-brand-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <span class="text-gray-700">{feature}</span>
              </li>
            ))}
          </ul>
          
          <div class="mt-8 p-6 bg-brand-light-gray rounded-xl">
            <h3 class="font-bold text-brand-dark mb-2">Need a specific part?</h3>
            <p class="text-gray-600 text-sm mb-4">
              Contact us with your vehicle make, model, and year. We'll help you find the right part.
            </p>
            <a href={`tel:${siteData.business.phone}`} class="text-brand-amber font-semibold hover:text-brand-amber-dark transition-colors">
              {siteData.business.phoneDisplay}
            </a>
          </div>
        </div>
        
        <div class="space-y-6">
          <div class="card">
            <div class="w-12 h-12 bg-brand-amber/20 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-brand-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
            </div>
            <h3 class="font-bold text-brand-dark text-lg mb-2">Quality Assured</h3>
            <p class="text-gray-600">We source parts from trusted suppliers to ensure reliability and performance.</p>
          </div>
          
          <div class="card">
            <div class="w-12 h-12 bg-brand-amber/20 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-brand-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <h3 class="font-bold text-brand-dark text-lg mb-2">Expert Guidance</h3>
            <p class="text-gray-600">Our team helps you find the exact part that fits your vehicle specifications.</p>
          </div>
          
          <div class="card">
            <div class="w-12 h-12 bg-brand-amber/20 rounded-lg flex items-center justify-center mb-4">
              <svg class="w-6 h-6 text-brand-amber" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="font-bold text-brand-dark text-lg mb-2">Fast Availability</h3>
            <p class="text-gray-600">Large inventory means commonly needed parts are often available immediately.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="section section-dark">
    <div class="container-custom text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        Need Auto Parts?
      </h2>
      <p class="text-gray-400 mb-8 max-w-xl mx-auto">
        Visit our store in Mussaffah or contact us. We're here to help you find the right parts for your vehicle.
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href={`tel:${siteData.business.phone}`} class="btn btn-primary">
          Call Now: {siteData.business.phoneDisplay}
        </a>
        <a href="/contact" class="btn btn-outline-light">
          Get Directions
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

